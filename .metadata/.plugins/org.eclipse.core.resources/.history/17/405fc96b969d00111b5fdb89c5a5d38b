public class Bombe implements Runnable {

	public static double y;
	public static double x;
	public static boolean trig = false;
	public static int radius = 5;
	public int timer = 1000;
	public int bombencounter=0;

	public Bombe(double x2, double y2, int i, int j) {

		x = x2;
		y = y2;
		radius = i;
		timer = j;

	}

	public void run() {

	


			for (int i = 0; i < timer; i++) {
				Arena.draw();
				StdDraw.picture(Bombe.x, Bombe.y, "gif/orange_bomb.gif");

			}

			Engine.fr(Engine.gamespeed);
			
			
			for (int j = 0; j < Bombe.radius * 6; j++) {

				 StdDraw.picture(Bombe.x, Bombe.y, "gif/bomb_seq07.gif",2,j);
				StdDraw.picture(Bombe.x, Bombe.y, "gif/bomb_seq07.gif", j, 2);

			}

			if ((Player.x <= radius * 6) && (Player.y <= radius * 6)) {
				Player.health += 30;
			}
		
	}
}
