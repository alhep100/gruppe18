public class Engine extends Thread {

	public void run() {

		try {
			
		
			while (true) {
				Arena.steuerung(); // Tastatureingaben
				Arena.levelswitch(); // Leveldaten
				Player.run();
		
		
				Engine.sleep(1);
			}
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	

	}

}
