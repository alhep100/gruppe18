	public void run() {

x=Player.x;
y=Player.y;
	
	
		
		
	}
	public static void draw() {
		
		if (vis==1){
		for (int j = 0; j < timer/10; j++) {
			
			
			StdDraw.picture(Bombe.x, Bombe.y, "gif/orange_bomb.gif");
			StdDraw.show(12);

		}

			
			
			
			for (int j = 0; j < Bombe.radius * 12; j++) {

				 StdDraw.picture(Bombe.x, Bombe.y, "gif/bomb_seq07.gif",2,j);
				StdDraw.picture(Bombe.x, Bombe.y, "gif/bomb_seq07.gif", j, 2);
				StdDraw.show(12);

			} 
			vis=0;

			if ((Player.x <= radius * 6) && (Player.y <= radius * 6)) {
				Player.health += 30;
			}
			
		}
		
	}
}
