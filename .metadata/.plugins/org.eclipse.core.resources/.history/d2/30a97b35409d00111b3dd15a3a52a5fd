public class Bombe extends Thread {

	public static double y;
	public static double x;
	public static boolean trig = false;
	public int radius = 5;
	public int timer=5000;

	public Bombe(double x2, double y2, int i, int j) {

		x = x2;
		y = y2;
		radius=i;
		timer=j;

	}


	public void run() {
	
	for (int i =0;i<timer;i++){
			StdDraw.picture(x,y, "gif/orange_bomb.gif");
			StdDraw.show(10);
	}
	for (int j =0;j<radius*6;j++){
		StdDraw.picture(x,y, "gif/bomb_seq07.gif",j,5);
		StdDraw.picture(x,y, "gif/bomb_seq07.gif",5,j);
		StdDraw.show(10);
}	

	
	if ((Player.x<=radius*6)&&(Player.y<=radius*6)){
		Player.health+=30;
		
	}
	
	}

}
