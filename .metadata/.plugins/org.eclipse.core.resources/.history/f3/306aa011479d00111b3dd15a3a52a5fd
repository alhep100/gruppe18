public class Bombe extends Thread {

	public static double y;
	public static double x;
	public static boolean trig = false;
	public static int radius = 5;
	public int timer = 5000;
	private static double[][] randm = new double[10][10];

	public Bombe(double x2, double y2, int i, int j) {

		x = x2;
		y = y2;
		radius = i;
		timer = j;

	}

	public void run() {

		for (int i = 0; i < 2000; i++) {
			StdDraw.picture(Bombe.x, Bombe.y, "gif/orange_bomb.gif");

		}

		for (int j = 0; j < Bombe.radius * 6; j++) {

			// StdDraw.picture(Bombe.x, Bombe.y, "gif/bomb_seq07.gif", j, 5);
			StdDraw.picture(Bombe.x, Bombe.y, "gif/bomb_seq07.gif", 5, j);

		}

		if ((Player.x <= radius * 6) && (Player.y <= radius * 6)) {
			Player.health += 30;

		}

	}

}
